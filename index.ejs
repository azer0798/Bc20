<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>SafeNode Chat</title>
    <style>
        /* ستايل الدردشة */
        #chat-container { height: 80vh; overflow-y: scroll; border: 1px solid #ccc; padding: 10px; margin-bottom: 10px; background: white; }
        .msg { margin-bottom: 10px; padding: 8px; border-radius: 5px; background: #e1ffc7; width: fit-content; }
        img { max-width: 200px; display: block; margin-top: 5px; }
    </style>
</head>
<body>
    <div id="chat-container"></div>
    <form id="msg-form">
        <input id="text-input" placeholder="اكتب رسالة...">
        <input type="file" id="image-input" accept="image/*">
        <button type="submit">إرسال</button>
    </form>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const form = document.getElementById('msg-form');
        
        form.onsubmit = async (e) => {
            e.preventDefault();
            const text = document.getElementById('text-input').value;
            const file = document.getElementById('image-input').files[0];
            let imageUrl = null;

            if (file) {
                const formData = new FormData();
                formData.append('image', file);
                const res = await fetch('/upload', { method: 'POST', body: formData });
                const data = await res.json();
                imageUrl = data.url;
            }

            socket.emit('message', { user: '<%= user.username %>', text, imageUrl });
            form.reset();
        };

        socket.on('message', (data) => {
            const div = document.createElement('div');
            div.className = 'msg';
            div.innerHTML = `<strong>${data.user}:</strong> ${data.text}`;
            if (data.imageUrl) div.innerHTML += `<img src="${data.imageUrl}">`;
            document.getElementById('chat-container').appendChild(div);
        });
    </script>
</body>
</html>
